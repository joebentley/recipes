<%= form_with(model: @ingredient, url: recipe_ingredient_path(@ingredient)) do |form| %>
  <%= render 'shared/form_errors', item: @ingredient, item_name: "ingredient" %>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_field :quantity %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
