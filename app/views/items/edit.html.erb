<%= form_with(model: @item, url: recipe_item_path(@item)) do |form| %>
  <%= render 'shared/form_errors', item: @item, item_name: "item" %>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_field :quantity %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
